{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "allowImportingTsExtensions": true,
    "types": ["@types/wicg-file-system-access", "@types/node"],
    "baseUrl": "./src",
    "paths": {}
  },
  "typeRoots": ["custom_modules/@types", "node_modules/@types"],
  "include": ["src"]
}
